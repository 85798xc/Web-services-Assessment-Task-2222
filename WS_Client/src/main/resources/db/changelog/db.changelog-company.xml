<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-company-table" author="aRomanov">
        <createTable tableName="COMPANY">
            <column name="department_id" type="bigint">
                <constraints referencedTableName="DEPARTMENT" referencedColumnNames="id"
                             nullable="false" foreignKeyName="CompanyDepartmentFk"/>
            </column>
            <column name="employee_id" type="bigint">
                <constraints referencedTableName="EMPLOYEE" referencedColumnNames="id"
                             nullable="false" foreignKeyName="CompanyEmployeeFk"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="load-company-data" author="aRomanov">
        <loadData tableName="COMPANY" file="company.csv"
                  separator=";" relativeToChangelogFile="true"/>
    </changeSet>

</databaseChangeLog>